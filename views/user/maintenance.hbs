<div class="account">
	<div class="container">
		<h2>Maintenance</h2>
		<form action="/user/maintenance" method="post">
			<div class="mation clearfix">
				<div class="col-md-12">
					<span>Product</span>
					<select name="product">
						{{#each products}}
							<option value="{{this.id}}">
								{{this.title}}
							</option>
				  		{{/each}}
			  		</select>
				</div>
				<div class="col-md-12">
					<span>Purchase Date</span>
					<input type="text" name="dop"> 
				</div>
				<div class="col-md-12">
					<span>Upload Image</span>
					<input type="text" name="image"> 
				</div>
				<input type="hidden" name="_csrf" value = "{{ csrfToken }}"> 
				<input type="submit" value="Submit">
			</div>
		</div>
	</form>
</div>